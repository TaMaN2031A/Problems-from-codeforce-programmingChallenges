#include <iostream>
#include <bits/stdc++.h>
#define fire cout
#define play long long

using namespace std;
void solve()
{
    play n;
    cin >> n;
    cout << n << endl;
    for(int j = 0; j < n; j++) {
        for (int i = 1; i < n; i++) {
            if(i == 1 && j==n-1)
                cout << n << " ";
            cout << i << " ";
            if(i == n-j-1)
                cout << n << " ";
        }
        cout << endl;
    }
}
int main() {
    play t;
    cin >> t;
    while(t--)
        solve();
    return 0;
}
